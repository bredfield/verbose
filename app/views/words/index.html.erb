<h1>Listing words</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Definition</th>
    <th>Learned</th>
    <th>Part of speech</th>
    <th>Phrases</th>
    <th>Hyphenation</th>
    <th>Synonyms</th>
    <th>Date learned</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.name %></td>
    <td><%= word.definition %></td>
    <td><%= word.learned %></td>
    <td><%= word.part_of_speech %></td>
    <td><%= word.phrases %></td>
    <td><%= word.hyphenation %></td>
    <td><%= word.synonyms %></td>
    <td><%= word.date_learned %></td>
    <td><%= word.user_id %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

